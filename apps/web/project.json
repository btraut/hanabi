{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "web",
  "projectType": "application",
  "sourceRoot": "apps/web/src",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./scripts/run-pnpm.sh --dir apps/web dev"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/web"],
      "options": {
        "command": "./scripts/run-pnpm.sh --dir apps/web build"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./scripts/run-pnpm.sh --dir apps/web preview"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/web/src/**/*.{ts,tsx}"]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p apps/web/tsconfig.json"
      }
    }
  },
  "tags": ["type:web", "scope:frontend"]
}

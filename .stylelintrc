{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": null,
        "no-eol-whitespace": null,
        "declaration-empty-line-before": null,
        "rule-empty-line-before": ["always-multi-line", {
            "except": ["first-nested"],
            "ignore": ["after-comment", "inside-block"]
        }],
        "at-rule-empty-line-before": null
    }
}
